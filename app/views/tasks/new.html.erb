<div class="container mt-5">
  <!-- heading for the new task form -->
  <h1 class="mb-4">New Task</h1>

  <div class="card mb-4">
    <div class="card-body">
      <!-- rendering the form partial with the @task object -->
      <%= render "form", task: @task %>
    </div>
  </div>

  <!-- back button to navigate to the tasks list -->
  <a href="/tasks" class="btn btn-secondary">Back to tasks</a>
</div>
